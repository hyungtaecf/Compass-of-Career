<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coc_project.MainActivity"
    android:background="#FFFFFF"
    android:textColor="#000000">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Compass Of Career"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="italic"
            android:gravity="center"
            android:id="@+id/tv"
            android:layout_weight="0.10" />

        <Button
            android:text="진로 적성 검사"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            android:drawableTop="@drawable/carrer3"
            android:textColor="#000000"
            android:background="#00ff0000"
            android:padding="1dp"
            android:layout_weight="0.1"
            android:layout_margin="0dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.23">

            <Button
                android:text="공지사항"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:paddingTop="5sp"
                android:drawableTop="@drawable/notice5"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:textColor="#000000"
                android:background="#00ff0000"
                android:layout_margin="0dp"/>

            <Button
                android:text="간단테스트"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:paddingTop="5sp"
                android:padding="0sp"
                android:drawableTop="@drawable/test2"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:textColor="#000000"
                android:background="#00ff0000"
                android:layout_margin="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.23">

            <Button
                android:text="한줄게시판"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:paddingTop="5sp"
                android:padding="0sp"
                android:drawableTop="@drawable/messageboard2"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:textColor="#000000"
                android:background="#00ff0000"
                android:layout_margin="0dp"/>

            <Button
                android:text="문의사항"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:paddingTop="5sp"
                android:padding="0sp"
                android:drawableTop="@drawable/inquiry2"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:textColor="#000000"
                android:background="#00ff0000"
                android:layout_margin="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.23">

            <Button
                android:text="관심글"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:paddingTop="5sp"
                android:padding="0sp"
                android:drawableTop="@drawable/attention"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:textColor="#000000"
                android:background="#00ff0000"
                android:layout_margin="0dp"/>

            <Button
                android:text="APP정보"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:paddingTop="5sp"
                android:padding="0sp"
                android:drawableTop="@drawable/appinfo2"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView"
                android:textColor="#000000"
                android:background="#00ff0000"
                android:layout_margin="0dp"/>
        </LinearLayout>

        </LinearLayout>

</RelativeLayout>
