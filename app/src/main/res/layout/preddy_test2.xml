<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#575757"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:text="52개의 문항중에 본인이 잘 하는 것 9개를 고르세요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="14dp"
        android:textStyle="italic"
        android:id="@+id/texttitle"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="1">

            <CheckBox
                android:text="조립하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things1" />

            <CheckBox
                android:text="수리하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things2"
                android:layout_weight="1" />

            <CheckBox
                android:text="계산하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data1"
                android:layout_weight="1" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea1"
                android:layout_weight="1"
                android:text="의견 주장하기" />

            <CheckBox
                android:text="설명하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea2"
                android:layout_weight="1" />

            <CheckBox
                android:text="돈 관리하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data2"
                android:layout_weight="1" />

            <CheckBox
                android:text="도구 이용하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things3"
                android:layout_weight="1" />

            <CheckBox
                android:text="손님 모시기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people1"
                android:layout_weight="1" />

            <CheckBox
                android:text="글짓기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea3"
                android:layout_weight="1" />

            <CheckBox
                android:text="짐작하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea4"
                android:layout_weight="1" />

            <CheckBox
                android:text="구분하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data3"
                android:layout_weight="1" />

            <CheckBox
                android:text="재배하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things4"
                android:layout_weight="1" />

            <CheckBox
                android:text="함께 일하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people2"
                android:layout_weight="1" />

            <CheckBox
                android:text="문제 해결하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea5"
                android:layout_weight="1" />

            <CheckBox
                android:text="의미찾기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea6"
                android:layout_weight="1" />

            <CheckBox
                android:text="편집하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data4"
                android:layout_weight="1" />

            <CheckBox
                android:text="수집하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things5"
                android:layout_weight="1" />

            <CheckBox
                android:text="작동하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things6"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:text="정리하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data5" />

            <CheckBox
                android:text="판매하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people3" />

            <CheckBox
                android:text="만들기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things7" />

            <CheckBox
                android:text="분석하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data6" />

            <CheckBox
                android:text="협상하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people12" />

            <CheckBox
                android:text="나르기/운송하기"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things8" />

            <CheckBox
                android:text="간추리기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data7" />

            <CheckBox
                android:text="홍보/알리기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea7" />

            <CheckBox
                android:text="화해시키기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people13" />

            <CheckBox
                android:text="재료 구매하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things9" />

            <CheckBox
                android:text="친구 사귀기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people4" />

            <CheckBox
                android:text="발표하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea8" />

            <CheckBox
                android:text="도움 주기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people5" />

            <CheckBox
                android:text="이동하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things10" />

            <CheckBox
                android:text="전략(작전)짜기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea9" />

            <CheckBox
                android:text="이끌기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people6" />

            <CheckBox
                android:text="다르게보기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea10" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <CheckBox
                android:text="검토하기"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:id="@+id/data8" />

            <CheckBox
                android:text="단서 모으기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data9"/>

            <CheckBox
                android:text="상담하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people7" />

            <CheckBox
                android:text="격려하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people8" />

            <CheckBox
                android:text="현장관리하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things11" />

            <CheckBox
                android:text="관찰 기록하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data10" />

            <CheckBox
                android:text="생각 결합하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea11" />

            <CheckBox
                android:text="훈련 시키기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people9" />

            <CheckBox
                android:text="아이디어 내기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea12" />

            <CheckBox
                android:text="건축하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things12" />

            <CheckBox
                android:text="확인하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data11" />

            <CheckBox
                android:text="가르치기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people10" />

            <CheckBox
                android:text="발명하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idea13" />

            <CheckBox
                android:text="조언/충고하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people11" />

            <CheckBox
                android:text="연구하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data12" />

            <CheckBox
                android:text="실험하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/things13" />

            <CheckBox
                android:text="심사하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data13" />

            <Button

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableTop="@drawable/next3"
            android:scaleType="fitCenter"
            android:background="#00ff0000"
            android:id="@+id/next"
            android:layout_weight="0.16" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>