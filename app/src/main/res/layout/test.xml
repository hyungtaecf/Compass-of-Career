<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textColor="#000000">


    <TextView
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="italic"
        android:id="@+id/textView8"
        android:text="간단 테스트"/>

    <TextView
        android:textColor="#ff0000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="12dp"
        android:gravity="center"
        android:textStyle="italic"
        android:id="@+id/textView"
        android:text="해당 테스트 클릭시 해당 테스트 홈페이지로 연결됩니다."/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:id="@+id/luck"
                android:drawableTop="@drawable/yunse6"
                android:scaleType="fitCenter"
                android:textColor="#000000"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:text="오늘의 운세" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:id="@+id/depression"
                android:drawableTop="@drawable/depression"
                android:scaleType="fitCenter"
                android:textColor="#000000"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:text="우울증 테스트" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:id="@+id/love"
                android:text="연애 심리테스트"
                android:textColor="#000000"
                android:drawableTop="@drawable/love"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                android:layout_weight="1" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:id="@+id/diet"
                android:textColor="#000000"
                android:text="다이어트 심리테스트"
                android:drawableTop="@drawable/diet"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:drawableTop="@drawable/color"
                android:scaleType="fitCenter"
                android:background="#00ff0000"
                android:id="@+id/color"
                android:textColor="#000000"
                android:text="색깔 심리테스트"
                android:layout_weight="1" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:background="#00ff0000"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>